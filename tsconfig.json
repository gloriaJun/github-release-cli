{
  "compilerOptions": {
    // "rootDirs": ["src"],
    // "baseUrl": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
